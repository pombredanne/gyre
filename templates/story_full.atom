  <atom:entry xmlns:atom="http://www.w3.org/2005/Atom">
    <atom:title type="html"><?cgi.escape(story.subject)?></atom:title>
    <atom:updated><?time3339(story.mtime)?></atom:updated>
    <atom:author>
      <atom:name><?getattr(story,'from')?></atom:name>
    </atom:author>
    <atom:category term="<?string.join(story.category,'/')?>" />
    <atom:id><?url?>/<?story.id?>.html</atom:id> <!-- cheating. Get a better ID -->
    <atom:link href="<?url?>/<?story.id?>.html" />

    <atom:content type="html"><?cgi.escape(markdown(template(story.body, locals())))?></atom:content>
  </atom:entry>
